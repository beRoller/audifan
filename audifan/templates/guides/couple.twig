                    {% if level % 5 == 0 %}
                        <div class="levelsection">
                            <div class="levelsectionheading">
                                <img src="{{ GLOBAL.staticUrl }}/img/rings/small/{{ ((level/5)|round(0, "floor")) + 1 }}.png" /><img src="{{ GLOBAL.staticUrl }}/img/coupleleveltitles/{{ ((level/5)|round(0, "floor")) + 1 }}.png" />
                            </div>
                            <table class="leveltable">
                    {% endif %}
                    
                    <tr>
                        <td class="level">Level {{ level + 1 }}</td>
                        <td class="req">{{ hearts|number_format }}</td>
                    </tr>
                    
                    {% if level % 5 == 4 %}
                            </table>
