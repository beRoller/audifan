{% extends "base.twig" %}

{% block title %}Audifan.net - Guides - Couple Guide{% endblock %}

{% block head %}
    <style>
        .levelsection {
            text-align: center;
            margin-bottom: 5px;
        }
        
        .levelsectionheading > img {
            margin-right: 3px;
            margin-left: 3px;
            vertical-align: middle;
        }
        
        .leveltable {
            border: 0px;
            border-collapse: collapse;
            width: 100%;
        }
        
        .leveltable tr td {
            width: 50%;
        }
        
        td.level {
            font-weight: bold;
            text-align: right;
            padding-right: 15px;
        }
        
        td.req {
            text-align: left;
            padding-left: 15px;
        }
        
        .lovepartytable {
            border: 0px;
            border-collapse: collapse;
        }
        
        .lovepartytable tr td {
            padding-bottom: 10px;
        }
        
        td.lpring {
            width: 64px;
        }
        
        .lplevel {
            font-weight: bold;
            font-size: 1.25em;
            margin-bottom: 3px;
        }
    </style>
{% endblock %}

