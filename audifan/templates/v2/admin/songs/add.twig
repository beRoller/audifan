{% extends "base.twig" %}

{% block title %}Audifan.net - Add Song{% endblock %}

{% block pagetitle %}Add Song{% endblock %}

{% block head %}

{% endblock %}

{% block body %}
    <form method="post" action="?">
        <table>
            {% for v in fields %}
                <tr>
                    <td>{{ v }}:</td>
                    <td><input type="text" name="{{ v }}" value="0" /></td>
                </tr>
            {% endfor %}
        </table>

        <div>
            Set new flags:<br />
            {% for i, v in ["normal","night","bu","onetwo","ballroom","holic","spp","tfc","bb"] %}
                <input type="checkbox" name="new_{{ i }}" /> {{ v }}<br />
            {% endfor %}
        </div>
        
        <input type="submit" name="submit" value="Add" />
    </form>
{% endblock %}